<h3>Listing Books</h3>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Isbn</th>
    <th>Format</th>
    <th>Borrowed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.isbn %></td>
    <td><%= book.format %></td>
    <td><%= book.borrowed %></td>
    <td><%= link_to 'Show', book, :class=> 'btn btn-info'%></td>
    <%if @current_user.has_role? :admin or @current_user.has_role? :manager %>
    <td><%= link_to 'Edit', edit_book_path(book), :class=> 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', book, :class=> 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if @current_user.has_role? :admin or @current_user.has_role? :manager %>
  <%= link_to 'New Book', new_book_path, :class=> 'btn btn-success btn-lg' %>
<% end %>
