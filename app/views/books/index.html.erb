<h3>Listing books</h3>
<div class="span8">
<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Isbn</th>
    <th>Format</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.isbn %></td>
    <td><%= book.format %></td>
    <td><%= link_to 'Show', book, :class=> 'btn'%></td>
    <%if @current_user.has_role? :admin || :manager %>
    <td><%= link_to 'Edit', edit_book_path(book), :class=> 'btn' %></td>
    <td><%= link_to 'Destroy', book, :class=> 'btn', method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path, :class=> 'btn' %>
