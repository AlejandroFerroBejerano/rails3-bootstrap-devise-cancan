<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :isbn %>
    <%= f.input :format, as: :radio_buttons, collection: ['Physical','Electronic'], :checked=> ('Physical')%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class=> 'btn btn-warning'%>
  </div>
<% end %>
