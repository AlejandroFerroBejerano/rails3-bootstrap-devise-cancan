<h3>Books</h3>
<p>Registered Books: <strong><%= @books.count %></strong>  <p>
<table class="table table-bordered">
  <thead>
    <tr>
      <th> User Name </th>
      <th> Last sign in at </th>
      <th> Last update </th>
    </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td> <%=link_to book.title, book %> </td>
      <td> <%= book.created_at.strftime('%a - %d-%m-%Y - %H:%M %Z')  %></td>
      <td> <%= book.updated_at.strftime('%a - %d-%m-%Y - %H:%M %Z')  %></td>
    </tr>
    <% end %>
  </tbody>
</table>
